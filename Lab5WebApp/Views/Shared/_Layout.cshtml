<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lab5WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Lab5WebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @Html.ActionLink("Конструирование ПО Лаб MVC", "Index", "Home", null, new {@class="text-decoration-none"})
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Lab5WebApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @* <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li> *@
                        <li style="margin-left: 10px">@Html.ActionLink("Главная", "Index", "Home", null, new { @class = "text-decoration-none" })</li>
                        <li style="margin-left: 10px">@Html.ActionLink("Корзина", "Index", "Basket", null, new { @class = "text-decoration-none" })</li>
                        <li style="margin-left: 10px">@Html.ActionLink("История заказов", "Index", "OrderHistory", null, new { @class = "text-decoration-none" })</li>
                        <li style="margin-left: 10px">@Html.ActionLink("Ассортимент", "LinqReport", "LinqReport", null, new { @class = "text-decoration-none" })</li>
                        <li style="margin-left: 10px">@Html.ActionLink("Заказы за период", "SPReport", "Reports", null, new { @class = "text-decoration-none" })</li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Lab5WebApp - Хайрдинов И.Ю., студент гр. 3-42@* <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> *@
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
